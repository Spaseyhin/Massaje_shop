<center>
<% if !@resume.errors.empty? %>
   <div class = "alert alert-error">
      
      <ul>
         <% @resume.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
         <% end %>
      </ul>
      
   </div>
<% end %>

<div class = "well">

   <%= form_with model: @resume, url: resume_path(@resume), method: :patch, local: true do |f| %>
   <br/>
   <br/>
      <%= f.text_field :name ,placeholder: "Имя"%>
      <br/>
      <br/>

      <%= f.text_field :price ,placeholder: "Цена" %>
      <br/>
      <br/>

      <%= f.text_field :time ,placeholder: "Время"%>
      <br/>
      <br/>

      <%= f.text_field :col ,placeholder: "Количество раз" %>
      <br/>
      <br/>



      <%= f.submit "Save", class: "btn btn-primary" %>
   <% end %>
</div>
</center>
